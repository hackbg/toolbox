{
  "exclude": [ "*.test.js", "dist/**/*" ],
  "compilerOptions": {
    "outDir":                       "dist",
    "target":                       "es2020",
    "module":                       "es2022",
    "moduleResolution":             "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop":              true,
    "allowJs":                      true,
    "resolveJsonModule":            true,
    "downlevelIteration":           true
  }
}

{
  "include": [
    "*",
    "package.json"
  ],
  "exclude": [
    "*.test.js",
    "dist/**/*",
    "ubik/test/**/*",
    "ganesha/tsc",
    "ganesha/vsc",
    "ganesha/test",
    "node_modules"
  ],
  "compilerOptions": {
    "composite":                    true,
    "outDir":                       "dist",
    "target":                       "es2020",
    "module":                       "es2022",
    "moduleResolution":             "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop":              true,
    "allowJs":                      true,
    "resolveJsonModule":            true,
    "downlevelIteration":           true,
    "skipLibCheck":                 true
  }
}

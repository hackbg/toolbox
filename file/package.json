{
  "name":         "@hackbg/file",
  "version":      "1.0.0",
  "main":         "kabinet.ts",
  "type":         "module",
  "homepage":     "https://github.com/hackbg/toolbox",
  "bugs":         "https://github.com/hackbg/toolbox/issues",
  "repository":   {"type": "git", "url": "https://github.com/hackbg/toolbox", "directory": "kabinet"},
  "license":      "MIT",
  "description":  "File utilities.",
  "files":        [ "README.md", "kabinet.ts" ],
  "dependencies": {
    "@hackbg/4mat":   "workspace:^1",
    "@hackbg/logs":   "workspace:^1",
    "js-yaml":        "^4.1.0",
    "mkdirp":         "^1.0.4",
    "recursive-copy": "^2.0.13",
    "rimraf":         "^3.0.2",
    "symlink-dir":    "^5.0.1",
    "tmp":            "^0.2.1",
    "toml":           "^3"
  },
  "devDependencies": {
    "@types/js-yaml":  "^4.0.5",
    "@types/mkdirp":   "^1.0.2",
    "@types/rimraf":   "^3.0.2",
    "@types/tmp":      "^0.2.3",
    "@hackbg/ganesha": "^2.2.5",
    "@hackbg/spec":    "workspace:*",
    "c8":              "^7.11.2"
  },
  "scripts": {
    "check":       "tsc --noEmit",
    "test":        "time ganesha-node node_modules/@hackbg/runspec kabinet.spec.ts.md",
    "test:cov":    "Ganesha_NoSourceMap=1 time c8 -r text -x *.spec.* ganesha-node node_modules/@hackbg/runspec kabinet.spec.ts.md",
    "test:lcov":   "Ganesha_NoSourceMap=1 time c8 -r lcov -x *.spec.* ganesha-node node_modules/@hackbg/runspec kabinet.spec.ts.md",
    "test:readme": "ganesha-node README.md",
    "ubik":        "npm run check && npm run test:readme && npm run test:cov && ubik"
  }
}

{
  "name":         "@hackbg/file",
  "version":      "2.0.0",
  "main":         "file.ts",
  "type":         "module",
  "homepage":     "https://github.com/hackbg/toolbox",
  "bugs":         "https://github.com/hackbg/toolbox/issues",
  "repository":   {"type": "git", "url": "https://github.com/hackbg/toolbox", "directory": "file"},
  "license":      "MIT",
  "description":  "File utilities.",
  "files":        [ "README.md", "file.ts" ],
  "dependencies": {
    "@hackbg/4mat":   "workspace:^1",
    "@hackbg/logs":   "workspace:^2.0.7",
    "@hackbg/hide":   "workspace:^1.0.3",
    "js-yaml":        "^4.1.0",
    "mkdirp":         "^1.0.4",
    "recursive-copy": "^2.0.13",
    "rimraf":         "^3.0.2",
    "symlink-dir":    "^5.0.1",
    "tmp":            "^0.2.1",
    "toml":           "^3"
  },
  "devDependencies": {
    "@types/js-yaml":  "^4.0.5",
    "@types/mkdirp":   "^1.0.2",
    "@types/rimraf":   "^3.0.2",
    "@types/tmp":      "^0.2.3",
    "@hackbg/spec":    "workspace:*",
    "c8":              "^7.11.2"
  },
  "scripts": {
    "check":       "tsc --noEmit",
    "test":        "time ganesha-run node_modules/@hackbg/spec file.spec.ts.md",
    "cov":         "Ganesha_NoSourceMap=1 time c8 -r text -r lcov -x *.spec.* ganesha-run node_modules/@hackbg/spec file.spec.ts.md",
    "test:readme": "ganesha-run README.md",
    "ubik":        "npm run check && npm run cov && ubik",
    "release":     "ubik release --otp 123123 --access public"
  }
}

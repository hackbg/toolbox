{
  "name": "@hackbg/toolbox",
  "version": "5.0.0",
  "type": "module",
  "main": "toolbox.ts",
  "private": true,
  "homepage": "https://github.com/hackbg/toolbox",
  "bugs": "https://github.com/hackbg/toolbox/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/hackbg/toolbox"
  },
  "license": "MIT",
  "description": "Baseline utilities.",
  "dependencies": {
    "@hackbg/dock": "workspace:*",
    "@hackbg/dump": "workspace:*",
    "@hackbg/4mat": "workspace:*",
    "@hackbg/file": "workspace:*",
    "@hackbg/cmds": "workspace:*",
    "@hackbg/logs": "workspace:*",
    "@hackbg/port": "workspace:*",
    "@hackbg/spec": "workspace:*",
    "bech32":      "^2.0.0",
    "open":        "^8.4.0",
    "rimraf":      "^3.0.2",
    "signal-exit": "^3.0.7"
  },
  "devDependencies": {
    "@hackbg/ubik": "workspace:*",
    "@types/node": "latest",
    "concurrently": "7.2.2",

    "typescript":  "^5",
    "typedoc":     "^0.24.8",
    "vitepress":   "1.0.0-alpha.10",
    "husky":       "^8.0.3",
    "lint-staged": "^13.1.2"
  },
  "scripts": {
    "prepare": "husky install",

    "ubik":  "npm run check && ubik",
    "ubik:all": "npm run check && pnpm -r ubik",
    "check": "tsc --noEmit",
    "ts:clean": "rm -rf dist packages/*/dist packages/*/types",
    "ts:build": "npm run ts:clean && concurrently 'npm:ts:build:*'",
    "ts:build:cjs": "ttsc -p tsconfig.cjs.json",
    "ts:build:esm": "tsc -p tsconfig.esm.json",
    "docs:typedoc": "NODE_OPTIONS=--max_old_space_size=8192 time ./node_modules/.bin/typedoc --tsconfig ./tsconfig.json --entryPointStrategy packages --entryPoints . --name Toolbox",
    "docs:vp:dev": "vitepress dev",
    "docs:vp:build": "vitepress build",
    "docs:vp:serve": "vitepress serve"
  },
  "lint-staged": {
    "*.ts": "pnpm check"
  }
}

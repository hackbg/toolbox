{
  "name": "@hackbg/toolbox",
  "version": "4.2.1",
  "type": "module",
  "main": "toolbox.ts",
  "homepage": "https://github.com/hackbg/toolbox",
  "bugs": "https://github.com/hackbg/toolbox/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/hackbg/toolbox"
  },
  "license": "MIT",
  "description": "Baseline utilities.",
  "dependencies": {
    "@hackbg/dokeres": "workspace:^4.1.2",
    "@hackbg/formati": "workspace:^3.0.2",
    "@hackbg/kabinet": "workspace:^3.1.1",
    "@hackbg/komandi": "workspace:^5.0.2",
    "@hackbg/konzola": "workspace:^2",
    "@hackbg/portali": "workspace:^1.2.3",
    "@hackbg/runspec": "workspace:^2.3.1",
    "bech32": "^2.0.0",
    "open": "^8.4.0",
    "rimraf": "^3.0.2",
    "signal-exit": "^3.0.7"
  },
  "devDependencies": {
    "@hackbg/ubik": "workspace:latest",
    "@types/node": "latest",
    "concurrently": "7.2.2",
    "typedoc": "beta",
    "typescript": "^4.7.4",
    "vitepress": "^1.0.0-alpha.4"
  },
  "scripts": {
    "release:dry": "pnpm i && pnpm -r release:dry && ubik dry",
    "release:wet": "pnpm i && pnpm -r release:wet && ubik wet",
    "ts:check": "tsc --noEmit",
    "ts:clean": "rm -rf dist packages/*/dist packages/*/types",
    "ts:build": "npm run ts:clean && concurrently 'npm:ts:build:*'",
    "ts:build:cjs": "ttsc -p tsconfig.cjs.json",
    "ts:build:esm": "tsc -p tsconfig.esm.json",
    "docs:typedoc": "typedoc",
    "docs:vp:dev": "vitepress dev",
    "docs:vp:build": "vitepress build",
    "docs:vp:serve": "vitepress serve"
  },
  "workspace": true,
  "packages": [
    "./dokeres",
    "./forkers",
    "./formati",
    "./ubik",
    "./kabinet",
    "./komandi",
    "./konzola",
    "./runspec"
  ]
}
